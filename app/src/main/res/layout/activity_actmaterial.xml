<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actmaterial"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Id. Material"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/etidmatm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Id. Material"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail del Usuario"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/etemailm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Libro"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/etnombrematu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Libro"
        android:textAlignment="center"
        android:layout_marginTop="1dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rblenguajem"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Lenguaje"
                />

            <RadioButton
                android:id="@+id/rbbasedatosm"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Base de Datos"
                />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_marginTop="2dp"
        android:id="@+id/btagregarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        />

    <Button
        android:layout_marginTop="2dp"
        android:id="@+id/btbuscarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        />
    <Button
        android:layout_marginTop="2dp"
        android:id="@+id/btactualizarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        />

    <Button
        android:layout_marginTop="2dp"
        android:id="@+id/bteliminarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        />
    <Button
        android:layout_marginTop="2dp"
        android:id="@+id/btlistarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:textAllCaps="false"
        android:textColor="#1E88E5"
        />

</LinearLayout>